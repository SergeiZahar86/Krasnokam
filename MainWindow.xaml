<Window x:Class="Krasnokam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Krasnokam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
        <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Viewbox x:Name="grid" PreviewMouseDown="grid_PreviewMouseDown" >
                <Canvas x:Name="can" PreviewMouseRightButtonDown="can_PreviewMouseRightButtonDown" Height="450" Width="800">
                    <Image Source="Image\low.jpg" Height="450" Width="800"/>
                </Canvas>
            </Viewbox>
        </Grid>
        <!--
        <InkCanvas x:Name="MyCanvasComponent" MouseDown="MyCanvasComponent_MouseDown" PreviewMouseDown="MyCanvasComponent_PreviewMouseDown">
            <Image Source="Image\low.jpg"/>
        </InkCanvas>
        -->
</Window>
